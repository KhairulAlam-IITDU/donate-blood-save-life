@model IEnumerable<ProjectDAL.BloodBank>

@{
    ViewBag.Title = "BbList";
}

<h2 style="text-align: center; color: white;">Blood Bank List</h2>
<hr/>

<table class="table" style="text-align: center; color: white;">
    <tr>
        <th style="text-align: center;">
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th style="text-align: center;">
            @Html.DisplayNameFor(model => model.CompanyName)
        </th>
        <th style="text-align: center;">
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th style="text-align: center;">
            @Html.DisplayNameFor(model => model.GovtRegNumber)
        </th>
        <th style="text-align: center;">
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th style="text-align: center;">
            @Html.DisplayNameFor(model => model.AreaWithinCity)
        </th>
        <th style="text-align: center;">
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th style="text-align: center;">
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th style="text-align: center;">
            @Html.DisplayNameFor(model => model.ContactNumber)
        </th>
        <th style="text-align: center;"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GovtRegNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AreaWithinCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNumber)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditBb", new {username = item.UserName}) |
                @Html.ActionLink("Details", "BBDetails", new {username = item.UserName}) |
                @Html.ActionLink("Delete", "DeleteBb", new {username = item.UserName})
            </td>
        </tr>
    }

</table>

<div style="text-align: center;">
    @Html.ActionLink("Back to Profile", "Index")
</div>
