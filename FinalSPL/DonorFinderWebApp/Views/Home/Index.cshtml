@{
    ViewBag.Title = "Index";
}

<div class="homeBody">

    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img class="carouselImg" src="~/Content/Images/donate_blood.jpg" alt="Blood" style="height: 300px;">
            </div>

            <div class="item">
                <img class="carouselImg" src="~/Content/Images/Donating_Blood.jpg" alt="Blood3" style="height: 300px;">
            </div>

            <div class="item">
                <img class="carouselImg" src="~/Content/Images/Blood_646x300.jpg" alt="Blood2" style="height: 300px;">
            </div>

        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="icon-prev" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="icon-next" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div style="height: 50px;">
        
    </div>

    <div class="row">

        <div class="col-sm-1"></div>
        <div class="col-sm-4">
            <h3 style="color: white; text-align: center;">Donate Blood Save Life</h3>
            <hr/>
            <p style="color: white; text-align: justify; font-size: 1.25em;">“Donate blood, save life” will be an online system to make it easy finding blood donors to needful people. It will help people with urgent blood requirement to find donors online and also search for blood available in blood bank.</p>
        </div>

        <div class="col-sm-2"></div>

        <div class="col-sm-4">
            <h3 style="color: white; text-align: center;">Why should you use this system?</h3>
            <hr/>
            <ul style="color: white; text-align: justify; font-size: 1.25em;">
                <li>Users can find blood donor information here instead of going and searching around.</li>
                <li>Saves time and efforts.</li>
                <li>Provides immediate information of specific blood group availablity in Blood Banks.</li>
            </ul>
        </div>
        <div class="col-sm-1"></div>
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Views/Shared/_Layout.cshtml")
}